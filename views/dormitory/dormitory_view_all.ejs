<!DOCTYPE html>
<html>
<head>
    <title> Dormitory - View All</title>
</head>
<body>

<h1>Dorms</h1>
<a href="/dorms/add">Add A New Dorm</a>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Dorm Name</th>
        <th>Dorm Number</th>
        <th>Number of Students </th>
        <th>Village Name</th>
        <th>Meter Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% for(var i = 0; i < dormitory.length; i++) { %>
    <tr>
        <td><%= dormitory[i].dorm_id %></td>
        <td><%= dormitory[i].dorm_name %></td>
        <td><%= dormitory[i].dorm_number%></td>
        <td><%= dormitory[i].number_of_students%></td>
        <td><%= dormitory[i].village_name %></td>
        <td><%= dormitory[i].meter_name %></td>
        <td>
        <a href='/dorms/edit/?dorm_id=<%= dormitory[i].dorm_id %>'>
            Edit
        </a>
        </td>
        <td>
            <a href='/dorms/delete/?dorm_id=<%= dormitory[i].dorm_id %>'>
            Delete
        </a>
        </td>
    </tr>
    <% } %>
</table>
<% if(locals.was_successful_delete) { %>
<div>
    <p>You Successfully Deleted A Dorm!</p>
</div>
<% } %>
</body>
</html>